<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

  <display-name>Welcome to Tomcat</display-name>
  <description>
    Welcome to Tomcat
  </description>
  <!--字符编码过滤器-->
  <filter>
    <filter-name>WebFilter</filter-name>
    <filter-class>com.ioutime.filter.WebFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>WebFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <!--登录-->
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.ioutime.servlet.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <!--注销-->
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>com.ioutime.servlet.Logout</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <!--注册-->
  <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>com.ioutime.servlet.Register</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <!--添加信息-->
  <servlet>
    <servlet-name>add</servlet-name>
    <servlet-class>com.ioutime.servlet.AddMessage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>add</servlet-name>
    <url-pattern>/add</url-pattern>
  </servlet-mapping>
  <!--删除信息-->
  <servlet>
    <servlet-name>del</servlet-name>
    <servlet-class>com.ioutime.servlet.DelMessage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>del</servlet-name>
    <url-pattern>/del</url-pattern>
  </servlet-mapping>
  <!--查询信息-->
  <servlet>
    <servlet-name>select</servlet-name>
    <servlet-class>com.ioutime.servlet.SelectMessage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>select</servlet-name>
    <url-pattern>/select</url-pattern>
  </servlet-mapping>
  <!--返回所有信息-->
  <servlet>
    <servlet-name>allmsg</servlet-name>
    <servlet-class>com.ioutime.servlet.GetAllMessage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>allmsg</servlet-name>
    <url-pattern>/all</url-pattern>
  </servlet-mapping>

</web-app>

